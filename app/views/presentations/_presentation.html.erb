<section id="<%= presentation.id -%>" class="presentation">
  <hgroup>
    <h2><%= link_to_unless_current presentation.title, presentation %></h2>
    <h4>
      by
      <%= render :partial => "presenters/presenter", 
                 :collection => presentation.presenters, 
                 :as => :presenter,
                 :spacer_template => "presenters/presenter_comma" %>
    </h4>
  </hgroup>
  <%= presentation.embed_video.html_safe if presentation.video_id.present? %>
  <p><%= presentation.description %></p>
  <ul class='links'>
      <% if presentation.slides_url.present? %>
        <li><%= link_to "Slides", presentation.slides_url, :target => "_blank" %></li>
      <% end %>
      <% if presentation.project_url.present? %>
        <li><%= link_to "Project", presentation.project_url, :target => "_blank" %></li>
      <% end %>
  </ul>
</section>
